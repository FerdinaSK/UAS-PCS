<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ferdinask.github">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_git"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_git"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.ferdinask.github.ui.activity.AboutActivity"></activity>
        <activity android:name="com.ferdinask.github.ui.activity.DetailActivity" />
        <activity android:name="com.ferdinask.github.ui.activity.MainActivity" />
        <activity android:name="com.ferdinask.github.ui.activity.UserActivity" />
        <activity android:name="com.ferdinask.github.ui.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>